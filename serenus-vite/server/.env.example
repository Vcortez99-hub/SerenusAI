# Configurações do Servidor
PORT=3001

# WhatsApp Business API Configuration
# Obtenha estes valores no Meta for Developers (https://developers.facebook.com/)
WA_PHONE_NUMBER_ID=your_phone_number_id_here
CLOUD_API_ACCESS_TOKEN=your_access_token_here
CLOUD_API_VERSION=v18.0

# Números Autorizados (separados por vírgula, formato: 5511999999999)
# Deixe vazio para permitir autorização dinâmica via WhatsApp
AUTHORIZED_NUMBERS=5511942903819

# Webhook Configuration
WEBHOOK_VERIFICATION_TOKEN=your_secure_verification_token_here
WEBHOOK_ENDPOINT=webhook

# Database Configuration (para futuro uso)
DATABASE_URL=your_database_url_here

# Configurações de Segurança
JWT_SECRET=your_jwt_secret_here

# Configurações do Frontend
FRONTEND_URL=http://localhost:3000